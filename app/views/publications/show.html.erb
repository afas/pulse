<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="content-normal-width">

  <%= content_tag :b, @publication.date_publish.strftime('%d.%m.%Y в %H:%M') %>
  , <%= content_tag :b, Type.by_code(@publication.publication_type) %> в
  категории <%= content_tag :b, Category.by_code(@publication.category) %>

  <%= content_tag :h1, @publication.title %>

  <% unless @publication.latitude.nil? %>
      <div id="map"></div>
      Пройдет по адресу:
      <%= content_tag :b, @publication.address %>
      (<%= link_to 'показать карту', 'javascript:void(0)', :onclick => 'showMap()' %>)
      <br/>
      Начало события:
      <%= content_tag :b, @publication.date_start.strftime('%Y.%m.%d') %> <%= content_tag :b, @publication.time_start.strftime(' в %H:%M') %>
      ;
  <% end %>

  <%= content_tag :h2, @publication.subtitle %>
</div>

<div id="slides" class="content-normal-width">
  <% @publication.publication_attachments.each do |p| %>
      <%= image_tag p.image_url %>
  <% end %>
</div>

<div class="content-normal-width">
  <%= raw @publication.body %>
</div>

<div class="content-normal-width">
  <p>
    <%= content_tag :b, @publication.author.fullname %>,
    <% unless @publication.publisher.nil? %>
        в ленте компании <%= content_tag :b, @publication.publisher.name %>
    <% end %>
  </p>
</div>

<div class="content-normal-width">
  <p>
    <b>Еще публикации</b>
    <br/>
    В категории:
    <%= content_tag :b, Category.by_code(@publication.category) %>
    <br/>
    Тип публикации:
    <%= content_tag :b, Type.by_code(@publication.publication_type) %>
    <br/>
    В регионе:
    <%= content_tag :b, Region.by_code(@publication.region) %>
  </p>
</div>


<% unless @publication.latitude.nil? %>
    <script type="text/javascript">
        function showMap() {
            $("#map").show();

            handler = Gmaps.build('Google');
            handler.buildMap({ provider: {zoom: 10, styles: [
                {"featureType": "landscape", "stylers": [
                    {"hue": "#F1FF00"},
                    {"saturation": -27.4},
                    {"lightness": 9.4},
                    {"gamma": 1}
                ]},
                {"featureType": "road.highway", "stylers": [
                    {"hue": "#0099FF"},
                    {"saturation": -20},
                    {"lightness": 36.4},
                    {"gamma": 1}
                ]},
                {"featureType": "road.arterial", "stylers": [
                    {"hue": "#00FF4F"},
                    {"saturation": 0},
                    {"lightness": 0},
                    {"gamma": 1}
                ]},
                {"featureType": "road.local", "stylers": [
                    {"hue": "#FFB300"},
                    {"saturation": -38},
                    {"lightness": 11.2},
                    {"gamma": 1}
                ]},
                {"featureType": "water", "stylers": [
                    {"hue": "#00B6FF"},
                    {"saturation": 4.2},
                    {"lightness": -63.4},
                    {"gamma": 1}
                ]},
                {"featureType": "poi", "stylers": [
                    {"hue": "#9FFF00"},
                    {"saturation": 0},
                    {"lightness": 0},
                    {"gamma": 1}
                ]}
            ]}, internal: {id: 'map'}}, function () {
                markers = handler.addMarkers([
                    {
                        "lat": <%= @publication.latitude %>,
                        "lng": <%= @publication.longitude %>
                    }
                ]);
                handler.bounds.extendWith(markers);
                handler.fitMapToBounds();
            });
        }
    </script>
<% end %>


