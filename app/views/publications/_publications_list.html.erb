<ul class="bucket-publications">
  <% @publications.each do |publication| %>
      <li>
        <div class="bucket-item">
            <span class="top">
              <%= content_tag :b, "#{publication.date_start.strftime('%d.%m.%Y')} в #{publication.time_start.strftime('%H:%M')}" %><br/><%= content_tag :b, EventType.by_code(publication.publication_type) %> в категории <%= content_tag :b, Category.by_code(publication.category) %>
            </span>
          <h2>
            <%= link_to publication.title, publication %>
          </h2>
            <span>
              <%= publication.subtitle %>
            </span>
        </div><% unless publication.publication_attachments.empty? %><img class="lazy" data-original="<%= publication.publication_attachments.first.image_url(:list) %>" alt="" /><% end %>
      </li>
  <% end %>
  <%#= will_paginate @publications, renderer: BootstrapPagination::Rails %>
</ul>
